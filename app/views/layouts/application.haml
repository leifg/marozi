!!!
%html{:lang => "en"}
  %head
    %meta{charset: "utf-8"}/
    %title Marozi
    %meta{content: "Leo-Clubs membership archive", name: "description"}/
    %meta{content:  "Leif Gensert", name: "author"}/
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      %script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
  %body
    .navbar-wrapper
      .container
        .navbar.navbar-inverse
          .navbar-inner
            %a.btb.btn-navbar.collapsed{:'data-toggle' => 'collapse', :'data-target' => '.nav-collapse'}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{href: '#'} Marozi
            .nav-collapse.in.collapse{style: 'height:auto;'}
              %ul.nav
                %li.active
                  %a{href: '#'}= t(:'navbar.home')
                %li
                  %a{href: '#'}= t(:'navbar.profile')
                %li
                  %a{href: '#'}= t(:'navbar.club')
                %li
                  %a{href: '#'}= t(:'navbar.mail')
                %li
                  %a{href: '#'}= t(:'navbar.about')
    .container
      = yield
